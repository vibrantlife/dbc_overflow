<h1>
	<strong>Title:</strong>
	<%= @question.title%>
</h1>

<h1>
	<strong>Content:</strong>
	<%= @question.content%>
</h1>
<%= render "answers/new"%>

<table style="width:100%">
	<tr>
		<th>Upvote</th>
		<th>Downvote</th>
		<th>Total Votes</th>
		<th>Title</th>
		<th>Text</th>
		
	</tr>
		<% @answers.each do |answer| %>
	<tr>
		<td><%= button_to 'Upvote', upvote_answer_path(answer), method: :put%></td>
		<td><%= button_to 'Downvote', downvote_answer_path(answer), method: :put%></td>
		<td><%=answer.vote_count%></td>
		<td><%= answer.title%></td>
		<td><%= answer.content%></td>
	</tr>
	<% end %>
</table>


<%= link_to 'Delete Question', question_path(@question), method: :delete, data: { confirm: 'Are you sure?'}  %>
<%= link_to 'Back', questions_path %> | 
<%= link_to 'Edit', edit_question_path(@question) %>