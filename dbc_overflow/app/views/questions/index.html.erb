<h1>Listing All Questions</h1>
<h3>Zen Quote of the Minute: <em><%= @quote%></em></h3>
<h1>New Question</h1>

<%= form_for :question do |question| %>
<p>
	<%= question.label :title %><br>
	<%= question.text_field :title %>
</p>

<p>
	<%= question.label :content %><br>
	<%= question.text_area :content %>
</p>

<p>

	<%= question.submit%>
</p>

<% end %>

<table>
  <tr>
    <th>Upvote</th>
    <th>Downvote</th>
    <th>Total Votes</th>
    <th>Title</th>
    <th>Text</th>
    <th>View</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @questions.each do |question| %>
  <tr>
    <td><%= button_to 'Upvote!', upvote_question_path(question), method: :put%></td>
    <td><%= button_to 'Downvote!', downvote_question_path(question), method: :put %></td>
    <td><%= question.vote_count%></td>
    <td><%= question.title%></td>
    <td><%= question.content%></td>
    <td><%= link_to 'Show', question_path(question)%></td>
    <td><%= link_to 'Edit', edit_question_path(question)%></td>
    <td><%= link_to 'Destroy', question_path(question), method: :delete%></td>
  </tr>
<% end %>
</table>
